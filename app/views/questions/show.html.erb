<%= @question.question %>
<ol>
  <li><%= @question.prop1 %></li>
  <li><%= @question.prop2 %></li>
  <li><%= @question.prop3 %></li>
</ol>


<%= form_for(@question)  do |f| %>
  <%= f.label :current_index %>
  <%= f.text_field :current_index %>
  <%= f.submit %>
<% end %>



<% if @next_id.nil? %>
 <input type="submit" value="Check your results">
<% else %>
 <input type="submit" value="Next Question">
<% end %>

<input type="text" name="current_index" value="<%= @question.current_index %>" class="hidden">

<% if !@previous_id.nil? %>
  <input type="submit" value="Previous Question">
<% end %>

